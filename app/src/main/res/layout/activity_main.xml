<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/PUPLE"
        android:id="@+id/view_menu"
        />
    
    <ImageView
        android:id="@+id/imagem_infinity"
        android:src="@drawable/baseline_all_infinity_24"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/view_menu"
        android:layout_alignBottom="@+id/view_menu"
        android:layout_marginStart="32dp"
        />
    
    <ImageView
        android:id="@+id/imagem_Emotion"
        android:src="@drawable/baseline_emoji_smileface_24"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@id/view_menu"
        android:layout_alignBottom="@id/view_menu"
        android:layout_centerHorizontal="true"
        />
    
    <ImageView
        android:id="@+id/Imagem_sunny"
        android:src="@drawable/baseline_wb_sunny_24"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@id/view_menu"
        android:layout_alignBottom="@id/view_menu"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olá Paulo"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        android:layout_below="@id/view_menu"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/text_frase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Risco Devem ser Corridos, Porque o maior perigo é não arriscar nada"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />

    <View
        android:id="@+id/View_sobre"
        android:layout_width="128dp"
        android:layout_height="4dp"
        android:background="@color/PUPLE"
        android:layout_below="@id/text_frase"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:elevation="4dp"
        />
    <Button
        android:id="@+id/Bottom_novaFrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOVA FRASE"
        android:backgroundTint="@color/PUPLE"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        />





</RelativeLayout>